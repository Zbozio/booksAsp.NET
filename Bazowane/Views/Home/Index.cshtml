@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .hero-section {
        text-align: center;
        position: relative;
        background-image: url('https://mir-s3-cdn-cf.behance.net/project_modules/2800_opt_1/49f25b92143355.5e43d1b6d3020.jpg'); /* Dodaj własne tło paralaksy */
        background-size: cover;
        background-position: center;
        color: #fff;
        height: 500px; /* Dostosuj wysokość sekcji według potrzeb */
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

        .hero-section h1 {
            font-size: 3em;
            margin-bottom: 20px;
        }

        .hero-section p {
            font-size: 1.2em;
            margin-bottom: 40px;
        }

    .learn-more-btn {
        display: inline-block;
        padding: 15px 30px;
        font-size: 1.2em;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        color: #fff;
        background-color: #4CAF50;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s, transform 0.3s;
        cursor: pointer;
    }

        .learn-more-btn:hover {
            background-color: #45a049;
        }

    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<div class="hero-section">
    
</div>
