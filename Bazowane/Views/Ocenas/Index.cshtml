
                    @model IEnumerable<Bazowane.Models.Ocena>

@{
    ViewData["Title"] = "Index";
}
<style>
    .custom-button {
        display: inline-block;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s, transform 0.3s;
    }

        .custom-button.edit {
            background-color: #3498db;
            color: #fff;
        }

            .custom-button.edit:hover {
                background-color: #2980b9;
            }

        .custom-button.details {
            background-color: #2ecc71;
            color: #fff;
        }

            .custom-button.details:hover {
                background-color: #27ae60;
            }

        .custom-button.delete {
            background-color: #e74c3c;
            color: #fff;
        }

            .custom-button.delete:hover {
                background-color: #c0392b;
            }

    .table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f8f9fa;
        }
</style>

<h1 class="text-center mt-3">Dodaj ocene</h1>

<p class="text-center">
    <a class="custom-button edit" asp-action="Create">Dodaj ocene</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered text-dark">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdKsiazkaNavigation.Tytul)
                </th>
                <th>
                    Ocena
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Opinia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataOceny)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.IdUzytkownikNavigation.Imie)
                </th>
                <th>Akcje</th>
            </tr>


        
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdKsiazkaNavigation.Tytul)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ocena1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Opinia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataOceny)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.IdUzytkownikNavigation.Imie)
                    </td>
                    <td>
                        <a class="custom-button edit" asp-action="Edit" asp-route-id="@item.IdOceny">Edytuj</a>
                        <a class="custom-button details" asp-action="Details" asp-route-id="@item.IdOceny">Szczegóły</a>
                        <a class="custom-button delete" asp-action="Delete" asp-route-id="@item.IdOceny">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
